@model System.Data.DataTable

@{
    Html.Kendo().Grid<dynamic>()
        .Name("ScheduleSummaryGrid")
        .Columns(columns =>
        {
            foreach (System.Data.DataColumn column in Model.Columns)
            {
                if (column.ColumnName.Equals("Medication"))
                {
                    columns.Bound(column.DataType, column.ColumnName).Title(column.Caption).Encoded(false);
                }
                else
                {
                    columns.Bound(column.DataType, column.ColumnName).Title(column.Caption);
                }
            }
        })
        .DataSource(dataSource => dataSource
            .Ajax()
            .Model(model =>
            {
                foreach (System.Data.DataColumn column in Model.Columns)
                {
                    model.Field(column.ColumnName, column.DataType);
                }
            })
            .Read(read => read.Action("ScheduleSummary_Read", "Users").Data("schedulesData"))
        )
        .ToolBar(tools => { tools.Pdf(); tools.Custom().Text("Print").HtmlAttributes(new { onclick = "printScheduleSummaryGrid(); return false;" }); })
        .AutoBind(true)
        .Groupable()
        .Scrollable(scr => scr.Height("auto"))
        .Pdf(pdf => pdf.FileName("Medications.pdf"))
        .Excel(excel => excel.AllPages(true).FileName("Medications.xlsx"))
        .Events(events => events.DataBound("scheduleSummary_dataBound"))
        .Render();
}

<style>
    .k-pdf-export .k-grid-toolbar,
    .k-pdf-export .k-pager-wrap,
    .k-pdf-export .k-grouping-header {
        display: none;
    }

    #ScheduleSummaryGrid th, #ScheduleSummaryGrid td {
        font-size: 18px;
    }

    #ScheduleSummaryGrid .summary-row td {
        border-bottom: solid 1px #000;
    }
</style>