@{Html.Kendo().Grid<TransafeRx.Models.GlucoseViewModel>()
                                          .Name("GlucoseGrid")
                                          .Columns(columns =>
                                          {
                                              columns.Bound(x => x.GlucoseId).Hidden();
                                              columns.Bound(x => x.GlucoseLevel).Width(75);
                                              columns.Bound(x => x.ReadingDate).EditorTemplateName("Date").Title("Reading Date Local").Width(75).Format("{0:G}");
                                              columns.Command(command => { command.Edit(); command.Destroy().Text("Delete"); }).Width(100);
                                          })
                                          .Resizable(resize => resize.Columns(true))
                                          .ToolBar(toolbar => toolbar.Create().Text("ADD NEW GLUCOSE ENTRY"))
                                          .Editable(editable => editable.Mode(GridEditMode.InLine))
                                          .Events(events => events.Edit("glucoseEdit").Cancel("glucoseCancel"))
                                          .Pageable()
                                          .Sortable()
                                          .Scrollable(scroll => scroll.Height(500))
                                          .DataSource(dataSource => dataSource
                                          .Ajax()
                                          .PageSize(50)
                                          //.Events(events => events.Error("bp_error_handler"))
                                          .Model(model =>
                                          {
                                              model.Id(x => x.GlucoseId);
                                              model.Field(x => x.UserId);
                                              model.Field(x => x.GlucoseLevel);
                                              model.Field(x => x.ReadingDate);
                                          })
                                          .Create(create => create.Action("Glucose_Create", "Users"))
                                          .Read(read => read.Action("GlucoseData_Read", "Users").Data("bpData"))
                                          .Update(update => update.Action("Glucose_Update", "Users"))
                                          .Destroy(destroy => destroy.Action("Glucose_Destroy", "Users"))
                                          )
                                          .Render();
}