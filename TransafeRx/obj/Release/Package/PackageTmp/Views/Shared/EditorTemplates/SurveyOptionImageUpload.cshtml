@model object

@(
 Html.Kendo().Upload()
        .Name("SurveyOptionImageUpload")
        .Messages(m => m.Select("Select Image..."))
        .Async(async => async
            .Save("UploadImage", "Upload")
            .SaveField("image")
            .AutoUpload(true)
        )
        .Events(x => x.Success("surveyOptionImageUpload_success"))
)